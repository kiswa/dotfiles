#!/bin/bash

if [[ $# -eq 0 ]] ; then
    echo 'No project name provided, exiting.'
    exit 0
fi

mkdir $1 && cd $1 && mkdir -p src/scss && mkdir src/js && mkdir src/images

cp ~/bin/swFiles/* .

echo 'Bower Initialization'
bower init

echo ''
echo 'Node Initialization'
npm init -y

echo ''
echo 'Installing Bower Components...'
bower install bootstrap-sass-official fontawesome --save --quiet

echo ''
echo 'Installing Node Modules...'
npm install --silent --save-dev del gulp main-bower-files gulp-concat gulp-minify-css gulp-scss-lint gulp-sass gulp-jshint jshint-stylish gulp-uglify gulp-autoprefixer gulp-filter gulp-imagemin

cp ~/bin/swFiles/gulpfile.js .
cp ~/bin/swFiles/.gitignore .
cp ~/bin/swFiles/lint.yml .
cp ~/bin/swFiles/* ./src/scss/

echo ''
git init
